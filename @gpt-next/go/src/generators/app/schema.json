{
  "$schema": "http://json-schema.org/schema",
  "$id": "App",
  "title": "",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "Name of the service",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "What is the name of your service?"
    },
    "deployment": {
      "type": "string",
      "description": "Type of service k8s or lambda",
      "default": "k8s",
      "x-prompt": {
        "message": "How will you deploy the service?",
        "type": "list",
        "items": [
          {
            "value": "k8s",
            "label": "Kubernetes"
          },
          {
            "value": "lambda",
            "label": "AWS Lambda"
          }
        ]
      }
    }
  },
  "required": [
    "name",
    "deployment"
  ]
}